{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "types": [
            "node"
        ]
    },
    //	"extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "**/globals.d.ts",
        "**/*.js",
        "**/*.svelte",
        "**/*.ts"
    ]
}
